<?xml version="1.0" encoding="UTF-8"?>
<launch>
	<node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
		<!-- Topic names -->
		<param name="scan_topic" value="/scan" />

		<!-- Frame names -->
<!-- 		<param name="map_frame" value="map" /> -->
		<param name="odom_frame" value="odom" />
		<param name="base_frame" value="laser" />
		<param name="output_timing" value="false" />

		<!-- Tf use -->
		<param name="use_tf_scan_transformation" value="true" />
		<param name="use_tf_pose_start_estimate" value="false" />
		<param name="pub_map_odom_transform" value="false" />
		<param name="advertise_map_service" value="true" />

		<!-- Map size / start point -->
		<param name="map_resolution" value="0.025" />
		<param name="map_size" value="2048" />
		<param name="map_start_x" value="0.5" />
		<param name="map_start_y" value="0.5" />
		<param name="map_multi_res_levels" value="3" />

		<!-- Map update parameters -->
		<param name="update_factor_free" value="0.4" />
		<param name="update_factor_occupied" value="0.95" />
		<param name="map_update_distance_thresh" value="0.05" />
		<param name="map_update_angle_thresh" value="0.005" />
		
		<param name="laser_min_dist" value="0.4" />
		<param name="laser_max_dist" value="15.0" />
	</node>
	
	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find dynamic_robot_localization_tests)/rviz/tum/hector_slam.rviz"/>
</launch>
